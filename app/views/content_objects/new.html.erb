<% form_for @content_object,:multipart => true, :method => :post do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <%= f.label :content, "File:" %>
  <%= f.file_field :content %>
  <%= f.label :thumbnail, "Thumbnail:" %>
  <%= f.file_field :thumbnail %>
  <%= f.label :categories, "Categories:" %>
  <%= f.select :categories, @categories %>
  <%= f.label :description, "Description:" %>
  <%= f.text_area :description %>
  <%= f.label :homepage, "Homepage:" %>
  <%= f.text_field :homepage %>
  <%= f.label :video_url, "Video Url:" %>
  <%= f.text_field :video_url %>

  <%= submit_tag %>
<% end %>
